---
import Layout from "../layouts/Layout.astro";
import AnimatedScroll from "../components/AnimatedScroll";
import Navbar from "../components/Navbar.astro";
---

<style>
  .scrolling-wrapper {
    overflow-x: hidden;
    width: 100%;
  }

  .scrolling-container {
    animation: scroll 25s linear infinite;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  @keyframes scroll {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-170%);
    }
  }

  .glow {
    transition: box-shadow 0.3s ease;
  }

  .glow:hover {
    box-shadow: 0 0 12px 2px #a855f7, 0 0 18px 4px #9333ea;
  }
</style>

<Layout title="My Skills">
  <main class="flex h-full min-h-screen">
    <div class="m-auto w-full">
      <!-- navbar -->
      <Navbar />

      <!-- hero -->
      <AnimatedScroll client:load>
        <div class="container px-4 md:px-32 p-4 mx-auto flex w-full">
          <div class="w-full">
            <div class="border-2 border-[#c084fc3b] bg-[#a955f71b] p-4 rounded-lg shadow-lg">
              <p class="text-white text-2xl font-medium text-center">My Skills</p>
              <p class="text-gray-300 text-center">Here are the tools, languages, and passions that define my creative & coding journey.</p>
              <div class="border-b-2 border-[#c084fc3b] mx-auto w-24 mt-4 mb-4"></div>

              <!-- Frontend -->
              <p class="text-white font-semibold text-lg mb-2">Frontend</p>
              <div class="scrolling-wrapper">
                <div class="scrolling-container">
                  <div class="glow bg-black text-white px-4 py-2 rounded-lg shadow-lg font-medium">HTML</div>
                  <div class="glow bg-black text-white px-4 py-2 rounded-lg shadow-lg font-medium">CSS</div>
                  <div class="glow bg-black text-white px-4 py-2 rounded-lg shadow-lg font-medium">JavaScript</div>
                  <div class="glow bg-black text-white px-4 py-2 rounded-lg shadow-lg font-medium">TypeScript</div>
                  <div class="glow bg-black text-white px-4 py-2 rounded-lg shadow-lg font-medium">React</div>
                  <div class="glow bg-black text-white px-4 py-2 rounded-lg shadow-lg font-medium">Astro</div>
                </div>
              </div>

              <!-- Backend -->
              <p class="text-white font-semibold text-lg mt-8 mb-2">Backend</p>
              <div class="scrolling-wrapper">
                <div class="scrolling-container">
                  <div class="glow flex items-center gap-2 bg-black text-white px-4 py-2 rounded-lg shadow-lg">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 272" class="w-6 h-6">
                      <path fill="#8CC84B" d="M127.8 0 15.6 64v144l112.2 64 112.2-64V64z"/>
                      <path fill="#fff" d="m157.1 179.3-8.9-5.4c-1.8-1.1-4.1-.5-5.1 1.3-2.7 4.6-6.3 8.4-13.1 8.4-6.7 0-10.9-3.3-10.9-11.5V136h26.2c2 0 3.7-1.7 3.7-3.7v-10.6c0-2-1.7-3.7-3.7-3.7h-26.2v-20.3c0-2-1.7-3.7-3.7-3.7h-14.2c-2 0-3.7 1.7-3.7 3.7v56.9c0 16.6 9.8 26.3 25.3 26.3 11.8 0 18.8-5.9 22.5-13.5 0.8-1.8 0.2-4-1.5-5.1z"/>
                    </svg>
                    <span class="font-medium">Node.js</span>
                  </div>
                  <div class="glow bg-black text-white px-4 py-2 rounded-lg shadow-lg font-medium">Express.js</div>
                </div>
              </div>

              <!-- Languages -->
              <p class="text-white font-semibold text-lg mt-8 mb-2">Languages</p>
              <div class="scrolling-wrapper">
                <div class="scrolling-container">
                  <div class="glow bg-black text-white px-4 py-2 rounded-lg shadow-lg font-medium">C++</div>
                  <div class="glow bg-black text-white px-4 py-2 rounded-lg shadow-lg font-medium">C#</div>
                  <div class="glow bg-black text-white px-4 py-2 rounded-lg shadow-lg font-medium">Python</div>
                  <div class="glow bg-black text-white px-4 py-2 rounded-lg shadow-lg font-medium">Rust</div>
                </div>
              </div>

              <!-- Dance Crews -->
              <p class="text-white font-semibold text-lg mt-8 mb-2">Dance</p>
              <div class="scrolling-wrapper">
                <div class="scrolling-container">
                  <div class="glow bg-black text-white px-4 py-2 rounded-lg shadow-lg flex items-center gap-2">
                    <img src="/assets/crewnique.svg" alt="Crewnique Logo" class="h-6 w-6"/>
                    <span class="font-medium">Crewnique</span>
                  </div>

                  <div class="glow bg-black text-white px-4 py-2 rounded-lg shadow-lg flex items-center gap-2">
                    <img src="/assets/lunatix.svg" alt="Lunatix Logo" class="h-6 w-6"/>
                    <span class="font-medium">Lunatix</span>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </AnimatedScroll>
    </div>
  </main>
</Layout>
