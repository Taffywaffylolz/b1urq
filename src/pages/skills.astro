<style>
	.scrolling-wrapper {
        overflow-x: hidden;
    	width: 100%;
    }
	.scrolling-container {
		animation: scroll 20s linear infinite;
	}
	.scrolling-container:hover {
		animation-play-state: paused;
	}
	@keyframes scroll {
		0% {
			transform: translateX(100%);
		}
		100% {
			transform: translateX(-170%);
		}
	}
	.heart {
		color: pink;
		font-size: 1.5rem;
	}
	.star {
		color: gold;
		font-size: 1.5rem;
	}
	.fire {
