---
import Layout from "../layouts/Layout.astro";
import AnimatedScroll from "../components/AnimatedScroll";
import Navbar from "../components/Navbar.astro";
---

<style>
  .scrolling-wrapper {
    overflow-x: hidden;
    width: 100%;
  }
  .scrolling-container {
    animation: scroll 30s linear infinite;
  }
  @keyframes scroll {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-200%);
    }
  }
  .glow:hover {
    filter: drop-shadow(0 0 8px #a855f7);
  }

  .skills-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 20px;
    padding: 20px;
  }

  .skill-box {
    background-color: var(--baby-blue);
    border: 2px solid var(--light-pink);
    border-radius: 10px;
    padding: 15px;
    text-align: center;
    transition: transform 0.3s ease;
  }

  .skill-box:hover {
    transform: scale(1.05);
  }

  .skill-box img {
    width: 50px;
    height: 50px;
    margin-bottom: 10px;
  }

  .skill-box span {
    color: var(--light-pink);
    font-weight: bold;
  }
</style>

<Layout title="My Skills">
  <main class="flex h-screen">
    <div class="m-auto w-full">
      <!-- navbar -->
      <Navbar />

      <!-- Skills section -->
      <AnimatedScroll client:load>
        <div class="container px-4 md:px-32 p-4 mx-auto flex w-full">
          <div class="w-full">
            <div class="border-2 border-[#c084fc3b] bg-[#a955f71b] p-4 rounded-lg shadow-lg">
              <p class="text-white text-2xl font-medium text-center">My Skills</p>
              <p class="text-gray-300 text-center">All the tools and art forms Iâ€™ve mastered along the way.</p>
              <div class="border-b-2 border-[#c084fc3b] mx-auto w-24 mt-4 mb-4"></div>

              <!-- Frontend -->
              <div class="scrolling-wrapper">
                <div class="scrolling-container flex items-center gap-6">
                  <h2 class="text-xl text-purple-400 font-bold">Frontend</h2>
                  <div class="skills-container">
                    <div class="skill-box">
                      <img src="/images/html.svg" alt="HTML" />
                      <span>HTML</span>
                    </div>
                    <div class="skill-box">
                      <img src="/images/css.svg" alt="CSS" />
                      <span>CSS</span>
                    </div>
                    <div class="skill-box">
                      <img src="/images/javascript.svg" alt="JavaScript" />
                      <span>JavaScript</span>
                    </div>
                    <div class="skill-box">
                      <img src="/images/tailwind.svg" alt="Tailwind" />
                      <span>Tailwind</span>
                    </div>
                    <div class="skill-box">
                      <img src="/images/astro.svg" alt="Astro" />
                      <span>Astro</span>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Backend -->
              <div class="scrolling-wrapper mt-10">
                <div class="scrolling-container flex items-center gap-6">
                  <h2 class="text-xl text-purple-400 font-bold">Backend</h2>
                  <div class="skills-container">
                    <div class="skill-box">
                      <img src="/images/nodejs.svg" alt="Node.js" />
                      <span>Node.js</span>
                    </div>
                    <div class="skill-box">
                      <img src="/images/express.svg" alt="Express.js" />
                      <span>Express.js</span>
                    </div>
                    <div class="skill-box">
                      <img src="/images/php.svg" alt="PHP" />
                      <span>PHP</span>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Languages -->
              <div class="scrolling-wrapper mt-10">
                <div class="scrolling-container flex items-center gap-6">
                  <h2 class="text-xl text-purple-400 font-bold">Languages</h2>
                  <div class="skills-container">
                    <div class="skill-box">
                      <img src="/images/python.svg" alt="Python" />
                      <span>Python</span>
                    </div>
                    <div class="skill-box">
                      <img src="/images/rust.svg" alt="Rust" />
                      <span>Rust</span>
                    </div>
                    <div class="skill-box">
                      <img src="/images/cpp.svg" alt="C++" />
                      <span>C++</span>
                    </div>
                    <div class="skill-box">
                      <img src="/images/csharp.svg" alt="C#" />
                      <span>C#</span>
                    </div>
                    <div class="skill-box">
                      <img src="/images/lua.svg" alt="Lua" />
                      <span>Lua</span>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Dance -->
              <div class="scrolling-wrapper mt-10">
                <div class="scrolling-container flex items-center gap-6">
                  <h2 class="text-xl text-purple-400 font-bold">Dance</h2>
                  <div class="skills-container">
                    <div class="skill-box">
                      <img src="/images/crewnique.svg" alt="Crewnique" />
                      <span>Crewnique</span>
                    </div>
                    <div class="skill-box">
                      <img src="/images/lunatix.svg" alt="Lunatix" />
                      <span>Lunatix</span>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </AnimatedScroll>
    </div>
  </main>
</Layout>
