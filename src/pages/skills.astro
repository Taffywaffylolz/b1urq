import Layout from "../layouts/Layout.astro";
import AnimatedScroll from "../components/AnimatedScroll";
import Navbar from "../components/Navbar.astro";
---

<style>
	.scrolling-wrapper {
        overflow-x: hidden;
    	width: 100%;
    }
	.scrolling-container {
		animation: scroll 20s linear infinite;
	}
	@keyframes scroll {
		0% {
			transform: translateX(100%);
		}
		100% {
			transform: translateX(-170%);
		}
	}
    
    /* Logo Styles */
    .skill-logo {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    /* Specific logo designs */
    .html-logo {
        background: #E34F26;
        color: white;
    }
    .css-logo {
        background: #264DE4;
        color: white;
    }
    .js-logo {
        background: #F7DF1E;
        color: black;
    }
    .node-logo {
        background: #68A063;
        position: relative;
    }
    .node-logo::before {
        content: "";
        position: absolute;
        width: 60%;
        height: 60%;
        background: rgba(255,255,255,0.1);
        clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    }
    .python-logo {
        background: linear-gradient(45deg, #3776AB 50%, #FFD43B 50%);
    }
    .csharp-logo {
        background: #239120;
        color: white;
    }
    .rust-logo {
        background: #000;
        color: #DEA584;
    }
    .cpp-logo {
        background: linear-gradient(45deg, #659AD2 50%, #00599C 50%);
    }
    .crew-logo {
        background: #FF6B6B;
        color: white;
    }
    .luna-logo {
        background: #4ECDC4;
        color: white;
    }
    .react-logo {
        background: #61DAFB;
        color: #2D2D2D;
    }
    .vue-logo {
        background: #41B883;
        color: #34495E;
    }
    .java-logo {
        background: #007396;
        color: white;
    }
    .go-logo {
        background: #00ADD8;
        color: white;
    }
</style>

