---
import Layout from "../layouts/Layout.astro";
import AnimatedScroll from "../components/AnimatedScroll";
import Navbar from "../components/Navbar.astro";
---

<style>
	.scrolling-wrapper {
        overflow-x: hidden;
    	width: 100%;
    }
	.scrolling-container {
		animation: scroll 20s linear infinite;
	}
	@keyframes scroll {
		0% {
			transform: translateX(100%);
		}
		100% {
			transform: translateX(-170%);
		}
	}
	.category-title {
		color: #c084fc;
		font-size: 1.5rem;
		font-weight: bold;
		margin: 1rem 0;
	}
	.language-item {
		border: 2px solid #c084fc;
		background: rgba(169, 85, 247, 0.1);
		padding: 0.5rem 1rem;
		border-radius: 0.5rem;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}
	.language-logo {
		width: 20px; /* Adjust size as needed */
		height: 20px; /* Adjust size as needed */
	}
</style>

<Layout title="My Skills">
	<main class="flex h-screen">
		<div class="m-auto w-full">
			<!-- navbar -->
			<Navbar />

			<!-- hero -->
			<AnimatedScroll client:load>
				<div class="container px-4 md:px-32 p-4 mx-auto flex w-full">
					<div class="w-full">
						<div class="border-2 border-[#c084fc3b] bg-[#a955f71b] p-4 rounded-lg shadow-lg">
							<p class="text-white text-2xl font-medium text-center">My Skills</p>
							<p class="text-gray-300 text-center">Here are the programming languages and technologies I work with.</p>
							<div class="border-b-2 border-[#c084fc3b] mx-auto w-24 mt-4 mb-4"></div>
							<div class="scrolling-wrapper">
								<div class="scrolling-container flex items-center gap-4">
									<!-- Frontend Languages -->
									<div>
										<p class="category-title">Frontend</p>
										<div class="language-item">
											<span class="language-logo">HTML</span>
											<span class="text-white font-medium">HTML5</span>
										</div>
										<div class="language-item">
											<span class="language-logo">CSS</span>
											<span class="text-white font-medium">CSS3</span>
										</div>
										<div class="language-item">
											<span class="language-logo">JS</span>
											<span class="text-white font-medium">JavaScript</span>
										</div>
										<div class="language-item">
											<span class="language-logo">React</span>
											<span class="text-white font-medium">React.js</span>
										</div>
										<div class="language-item">
											<span class="language-logo">Vue</span>
											<span class="text-white font-medium">Vue.js</span>
										</div>
									</div>

									<!-- Backend Languages -->
									<div>
										<p class="category-title">Backend</p>
										<div class="language-item">
											<span class="language-logo">Node</span>
											<span class="text-white font-medium">Node.js</span>
										</div>
										<div class="language-item">
											<span class="language-logo">Python</span>
											<span class="text-white font-medium">Python</span>
										</div>
										<div class="language-item">
											<span class="language-logo">C#</span>
											<span class="text-white font-medium">C#</span>
										</div>
										<div class="language-item">
											<span class="language-logo">C++</span>
											<span class="text-white font-medium">C++</span>
										</div>
										<div class="language-item">
											<span class="language-logo">Rust</span>
											<span class="text-white font-medium">Rust</span>
										</div>
									</div>

									<!-- Other Languages -->
									<div>
										<p class="category-title">Other Languages</p>
										<div class="language-item">
											<span class="language-logo">Web</span>
											<span class="text-white font-medium">Web Development</span>
										</div>
										<div class="language-item">
											<span class="language-logo">Dance</span>
											<span class="text-white font-medium">Dancing</span>
										</div>
										<div class="language-item">
											<span class="language-logo">Lunatix</span>
											<span class="text-white font-medium">Lunatix Crew</span>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</AnimatedScroll>
		</div>
	</main>
</Layout>
